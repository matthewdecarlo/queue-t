<nav> 
  <% if current_user %>
    <li>
      <a href="#">Hi, <%= current_user.username.titleize %>!</a>
    </li>
    <li class="active">
      <%= link_to "Logout", logout_path, method: :delete %>
    </li>
  <% else %>
    <li class="active"><%= link_to "Sign Up", signup_path %></li>
    <li class="active"><%= link_to "Login", login_path %></li>
  <% end %>
</nav>