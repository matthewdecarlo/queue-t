<h1>Listing teams</h1>

<%= link_to 'New Team', new_team_path %><br />

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= link_to team.name.capitalize, team %></td>
        <td><%= link_to 'Edit', edit_team_path(team), class: "button secondary" %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' }, class: "button alert" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
